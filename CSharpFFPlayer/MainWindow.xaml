<mahApps:MetroWindow
    x:Class="CSharpFFPlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSharpFFPlayer"
    xmlns:mahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    KeyDown="Window_KeyDown"
    mc:Ignorable="d">

    <mahApps:MetroWindow.LeftWindowCommands>
        <mahApps:WindowCommands>
            <mahApps:DropDownButton Content="ファイル" Foreground="White">
                <mahApps:DropDownButton.Items>

                    <MenuItem Height="23" Click="Open">
                        <MenuItem.Header>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="開く"
                                TextAlignment="Left" />
                        </MenuItem.Header>
                    </MenuItem>

                    <MenuItem Height="23" Click="Exit">
                        <MenuItem.Header>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="終了"
                                TextAlignment="Left" />
                        </MenuItem.Header>
                    </MenuItem>
                </mahApps:DropDownButton.Items>
            </mahApps:DropDownButton>

            <mahApps:DropDownButton Content="再生" Foreground="White">
                <mahApps:DropDownButton.Items>

                    <MenuItem Height="23" Click="KeyDown_Space">
                        <MenuItem.Header>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="一時停止/再開"
                                TextAlignment="Left" />
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Height="23" Click="StopButton_Click">
                        <MenuItem.Header>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="13"
                                Text="停止"
                                TextAlignment="Left" />
                        </MenuItem.Header>
                    </MenuItem>
                </mahApps:DropDownButton.Items>
            </mahApps:DropDownButton>
            <Button Content="settings" />
        </mahApps:WindowCommands>
    </mahApps:MetroWindow.LeftWindowCommands>

    <DockPanel>
        <Grid Background="DimGray">
            <Image
                Name="VideoImage"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
            <Border
                Margin="30,0,30,10"
                Padding="10"
                VerticalAlignment="Bottom"
                Background="#DDDDDD"
                BorderBrush="#FF383838"
                CornerRadius="20,20,20,20">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="30"
                        Background="White"
                        BorderBrush="{x:Null}"
                        Click="KeyDown_Space"
                        Foreground="#FF757575">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Content" Value="{materialDesign:PackIcon Play}" />
                            </Style>
                        </Button.Style>
                    </Button>
                    <Slider
                        x:Name="SeekSlider"
                        Grid.Column="1"
                        Margin="20,0,20,0"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Maximum="{Binding TotalFrames}"
                        Minimum="0"
                        PreviewMouseDown="SeekSlider_PreviewMouseDown"
                        PreviewMouseUp="SeekSlider_PreviewMouseUp"
                        TickFrequency="1"
                        Value="{Binding CurrentFrame, Mode=TwoWay}" />
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</mahApps:MetroWindow>
